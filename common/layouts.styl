class(name)
  [class^=name]
    { block }

.layout
  &-flex
    display flex
    justify-content center
    align-items center
  &-flex-column
    display flex
    flex-direction column
    justify-content center
    align-items center
  &-grid
    display grid

/**
 * SYNTAX
 * .layout-flex use .box
 * .layout-grid use .cell
 */

/*
